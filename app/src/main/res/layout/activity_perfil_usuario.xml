<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.PerfilUsuarioActivity">

    <TextView
        android:id="@+id/activity_perfil_usuario_label_usuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"
         />

    <TextView
        android:id="@+id/activity_perfil_usuario_text_usuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Id Usuario"
        app:layout_constraintStart_toStartOf="@id/activity_perfil_usuario_label_usuario"
        app:layout_constraintTop_toBottomOf="@id/activity_perfil_usuario_label_usuario"
         />

    <TextView
        android:id="@+id/activity_perfil_usuario_label_nome"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/activity_perfil_usuario_text_usuario"
        app:layout_constraintStart_toStartOf="@id/activity_perfil_usuario_label_usuario"
        android:text="Nome"
         />

    <TextView
        android:id="@+id/activity_perfil_usuario_text_nome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Id Usuario"
        app:layout_constraintStart_toStartOf="@id/activity_perfil_usuario_label_usuario"
        app:layout_constraintTop_toBottomOf="@+id/activity_perfil_usuario_label_nome"
         />

    <Button
        android:id="@+id/activity_perfil_usuario_botao_sair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sair do app"
        app:icon="@drawable/ic_action_sair"
        android:backgroundTint="@color/warning"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_perfil_usuario_text_nome" />
</androidx.constraintlayout.widget.ConstraintLayout>